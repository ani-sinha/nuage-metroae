---
- hosts: localhost
  tasks:
  - name: Generate random hostname
    set_fact:
      host_name: "jen-slave-{{ 100 | random }}"

  - name: Copy test build file for RedHat OS family
    local_action: template src={{ playbook_dir }}/test/files/build.yml.{{ ansible_os_family }}.CI.j2 dest={{ playbook_dir }}/roles/reset-build/files/build.yml

