---
- hosts: localhost
  tasks:
  - name: Copy test build file for all components for RedHat OS family
    local_action: copy src={{ playbook_dir }}/test/files/build.yml.all.{{ ansible_os_family }} dest={{ playbook_dir }}/roles/reset-build/files/build.yml

  - name: Copy test.yml file to the playbook root
    local_action: copy src={{ playbook_dir }}/test/files/test_destroy.yml dest={{ playbook_dir }}/test.yml
