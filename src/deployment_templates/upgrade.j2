###############################################################################
# Upgrade
#
# Nuage MetroAE upgrade settings
#
# Automatically generated by {{ generator_script | default("script") }}.
#

# < Upgrade starting version >
# Version VSD is being upgraded from. Required for VSD stats (VSTAT) upgrade.
#
upgrade_from_version: "{{ upgrade_from_version }}"

# < Upgrade desired version >
# Version VSD is being upgraded to. Required for VSD stats (VSTAT) upgrade.
#
upgrade_to_version: "{{ upgrade_to_version }}"

# < VSTAT NFS server >
# Used to mount NFS folder on VSD stats (VSTAT) node(s).
#
{%- if vstat_nfs_server is defined %}
vstat_nfs_server: "{{ vstat_nfs_server }}"
{%- else %}
# vstat_nfs_server: 0.0.0.0
{%- endif %}

# < VSTAT NFS directory >
# Used to mount NFS directory on VSD stats (VSTAT) node(s).
#
{%- if vstat_nfs_folder is defined %}
vstat_nfs_folder: "{{ vstat_nfs_folder }}"
{%- else %}
# vstat_nfs_folder: /tmp/vstat/
{%- endif %}

# < Backup directory root >
# The location for backups during upgrade.
#
{%- if metro_backup_root is defined %}
metro_backup_root: "{{ metro_backup_root }}"
{%- else %}
# metro_backup_root: (unzip dir)/backups
{%- endif %}

