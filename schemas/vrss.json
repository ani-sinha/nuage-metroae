{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vrss",
    "title": "Virtualized Routing and Switching",
    "description": "Specify configuration for Nuage MetroAE VRSs",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VRS",
        "properties": {
            "vrs_os_type": {
                "type": "string",
                "title": "VRS OS type",
                "propertyOrder": 10
            },
            "libnetwork_install": {
                "type": "boolean",
                "default": false,
                "title": "Libnetwork install",
                "propertyOrder": 20
            },
            "dkms_install": {
                "type":"boolean",
                "default": false,
                "title": "DKMS install",
                "propertyOrder": 30
            },
            "active_controller_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Active Controller IP address",
                "propertyOrder": 40
            },
            "standby_controller_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Standby Controller IP address",
                "propertyOrder": 50
            },
            "vrs_ip_list": {
                "type": "array",
                "title": "VRS compute node IP list",
                "propertyOrder": 60,
                "items": {
                    "type": "string",
                    "format": "ipv4"
                }
            }
        },
        "required": ["vrs_os_type", "active_controller_ip", "standby_controller_ip", "vrs_ip_list"]
    }
}
