###############################################################################
# NSGv Ports
#
# Specify NSGvs access port configuration.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if nsgvs is defined and nsgvs %}
{% for item in nsgvs %}
#
# NSGv {{ loop.index }}
#
-
    # < NSG Access Port Name >
    # Name of the access port for the NSG
    #
    {%- if item.name is defined %}
    name: "{{ item.name }}"
    {%- else %}
    # name: ""
    {%- endif %}

    # < NSG Access Port Physical Name >
    # Physical name of the access port for the NSG
    #
    {%- if item.physical_name is defined %}
    physical_name: "{{ item.physical_name }}"
    {%- else %}
    # physical_name: port2
    {%- endif %}

    # < NSG Access Port VLAN Range >
    # VLAN range of the access port for the NSG
    #
    {%- if item.vlan_range is defined %}
    vlan_range: "{{ item.vlan_range }}"
    {%- else %}
    # vlan_range: ""
    {%- endif %}

    # < NSG Access Port VLAN Number >
    # VLAN number of the NSG access port for the NSG
    #
    {%- if item.vlan_number is defined %}
    vlan_number: {{ item.vlan_number }}
    {%- else %}
    # vlan_number: 0
    {%- endif %}

    ################################

    # < NSGv Access Bridge >
    # Network bridge used for the access network when installing an NSGv. This will be a Distributed Virtual PortGroup (DVPG) when deploying on vCenter or a Linux network bridge
    #
    {%- if item.bridge is defined %}
    bridge: "{{ item.bridge }}"
    {%- else %}
    # bridge: 0
    {%- endif %}

    ################################

{% endfor %}
{% else %}
[ ]
{% endif %}
