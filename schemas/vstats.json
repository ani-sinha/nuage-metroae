{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:vstats",
    "title": "VSTATs",
    "description": "Nuage MetroAG VSD stats (VSTAT) settings",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "{{ hostname }}",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "upgrade_vmname": {
                "type": "string",
                "format": "hostname",
                "title": "Upgrade VM name",
                "propertyOrder": 30
            },
            "target_server_type": {
                "type": "string",
                "enum": ["kvm", "vcenter", "heat"],
                "title": "Server type",
                "propertyOrder": 40
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "{{ mgmt_bridge }}",
                "title": "Bridge interface",
                "propertyOrder": 60
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "vsd_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vsd1.{{ dns_domain }}",
                "title": "VSD FQDN",
                "propertyOrder": 100
            },
            "vcenter_username": {
                "type": "string",
                "title": "VCenter Username",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter username)",
                "propertyOrder": 110
            },
            "vcenter_password": {
                "type": "string",
                "title": "Password",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter password)",
                "propertyOrder": 120
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "propertyOrder": 130
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "propertyOrder": 140
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "propertyOrder": 150
            }
        },
        "required": ["hostname", "upgrade_vmname", "target_server_type", "target_server", "mgmt_ip", "mgmt_netmask", "mgmt_gateway"]
    }
}
