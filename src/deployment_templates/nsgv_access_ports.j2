###############################################################################
# NSGv Ports
#
# Specify NSGvs access port configuration.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if nsgvs is defined and nsgvs %}
{% for item in nsgvs %}
#
# NSGv {{ loop.index }}
#
-
    # < NSG Access Port Name >
    # Name of the access port for the NSG
    #
    {%- if item.port_name is defined %}
    port_name: "{{ item.port_name }}"
    {%- else %}
    # port_name: ""
    {%- endif %}

    # < NSG Access Port Physical Name >
    # Physical name of the access port for the NSG
    #
    {%- if item.port_physical_name is defined %}
    port_physical_name: "{{ item.port_physical_name }}"
    {%- else %}
    # port_physical_name: port2
    {%- endif %}

    # < NSG Access Port VLAN Range >
    # VLAN range of the access port for the NSG
    #
    {%- if item.port_vlan_range is defined %}
    port_vlan_range: "{{ item.port_vlan_range }}"
    {%- else %}
    # port_vlan_range: ""
    {%- endif %}

    # < NSG Access Port VLAN Number >
    # VLAN number of the NSG access port for the NSG
    #
    {%- if item.port_vlan_number is defined %}
    port_vlan_number: {{ item.port_vlan_number }}
    {%- else %}
    # port_vlan_number: 0
    {%- endif %}

    ################################

{% endfor %}
{% else %}
[ ]
{% endif %}
