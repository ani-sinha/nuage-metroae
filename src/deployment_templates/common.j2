###############################################################################
# Common items
#
# Nuage MetroAG common settings
#
# Automatically generated by {{ generator_script | default("script") }}.
#

# < Unzipped file directory >
# Paths to find unzipped image files (e.g. qcow2)
#
nuage_unzipped_files_dir: "{{ nuage_unzipped_files_dir }}"

# < SSH public key >
# Path to a public key file to be injected in to VSD, VNS Util, VCIN and VSTAT vms during deployment and corresponding private file to be used to connect to the components during deployment
#
{%- if user_ssh_pub_key is defined %}
user_ssh_pub_key: "{{ user_ssh_pub_key }}"
{%- else %}
# user_ssh_pub_key: ~/.ssh/id_rsa.pub
{%- endif %}

# < SSH private key >
# Path to a private key file to be injected in to VSD, VNS Util, VCIN and VSTAT vms during deployment and corresponding private file to be used to connect to the components during deployment
#
{%- if user_ssh_priv_key is defined %}
user_ssh_priv_key: "{{ user_ssh_priv_key }}"
{%- else %}
# user_ssh_priv_key: ~/.ssh/id_rsa
{%- endif %}

# < Target server username >
# Remote user name for ansible to execute as on the target server (hypervisor).
#
{%- if target_server_username is defined %}
target_server_username: "{{ target_server_username }}"
{%- else %}
# target_server_username: root
{%- endif %}

# < Sudo username >
# The sudo user for local actions.
#
{%- if ansible_sudo_username is defined %}
ansible_sudo_username: "{{ ansible_sudo_username }}"
{%- else %}
# ansible_sudo_username: root
{%- endif %}

# < Reports directory >
# Location for health reports.
#
{%- if metro_reports_dir is defined %}
metro_reports_dir: "{{ metro_reports_dir }}"
{%- else %}
# metro_reports_dir: ./reports
{%- endif %}

# < DNS domain >
#
dns_domain: "{{ dns_domain }}"

# < VSD global FQDN >
# Use xmpp FQDN for clustered VSDs and the VSD FQDN for stand-alone.
#
{%- if vsd_fqdn_global is defined %}
vsd_fqdn_global: "{{ vsd_fqdn_global }}"
{%- else %}
# vsd_fqdn_global: vsd1.(DNS domain)
{%- endif %}

# < Management network bridge >
# Hypervisor network bridges.
#
mgmt_bridge: "{{ mgmt_bridge }}"

# < Data network bridge >
# Hypervisor network bridges.
#
data_bridge: "{{ data_bridge }}"

# < Access network bridge >
# Hypervisor network bridges.
#
access_bridge: "{{ access_bridge }}"

# < Images directory >
# Location to create VM images on KVM target servers.
#
{%- if images_path is defined %}
images_path: "{{ images_path }}"
{%- else %}
# images_path: /var/lib/libvirt/images/
{%- endif %}

# < NTP servers >
# Must be in dotted-decimal format
#
ntp_server_list: [ {% for i in ntp_server_list | default([]) %}"{{ i }}", {% endfor %}]

# < DNS servers >
#
dns_server_list: [ {% for i in dns_server_list | default([]) %}"{{ i }}", {% endfor %}]

# < Timezone >
#
{%- if timezone is defined %}
timezone: "{{ timezone }}"
{%- else %}
# timezone: US/Pacific
{%- endif %}

# < Proxy for yum >
#
{%- if yum_proxy is defined %}
yum_proxy: "{{ yum_proxy }}"
{%- else %}
# yum_proxy: NONE
{%- endif %}

# < Yum update >
#
{%- if yum_update is defined %}
yum_update: {{ yum_update | lower }}
{%- else %}
# yum_update: True
{%- endif %}

# < Network scope >
# local: connectivity between containers is limited to within the local host. global: connectivity between containers may span across hosts in the cluster.
# (local, global) 
#
{%- if libnetwork_scope is defined %}
libnetwork_scope: "{{ libnetwork_scope }}"
{%- else %}
# libnetwork_scope: local
{%- endif %}

# < Cluster store URL scheme >
# Scheme of URL pointing to the key-value store used for the cluster.
#
{%- if libnetwork_cluster_store_scheme is defined %}
libnetwork_cluster_store_scheme: "{{ libnetwork_cluster_store_scheme }}"
{%- else %}
# libnetwork_cluster_store_scheme: consul
{%- endif %}

# < Cluster store URL host >
# Host of URL pointing to the key-value store used for the cluster.
#
libnetwork_cluster_store_host: "{{ libnetwork_cluster_store_host }}"

# < Cluster store URL port >
# Port of URL pointing to the key-value store used for the cluster.
#
{%- if libnetwork_cluster_store_port is defined %}
libnetwork_cluster_store_port: {{ libnetwork_cluster_store_port }}
{%- else %}
# libnetwork_cluster_store_port: 8500
{%- endif %}

