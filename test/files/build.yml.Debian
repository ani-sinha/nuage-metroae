---
# See BUILD.md for details
- hosts: localhost
  gather_facts: no
  roles:
    - build
  vars:
    vsd_standalone: True
    vsd_qcow2_path: "/tmp/metro/R4"
    vsd_qcow2_file_name: "VSD-4.0.4_44.qcow2"
    myvsds:
      - { hostname: jenkinsvsd1.example.com,
          target_server: 135.227.181.232,
          mgmt_ip: 192.168.122.211,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0 }
    vsc_qcow2_path: "/tmp/metro/R4"
    vsc_qcow2_file_name: "vsc_singledisk.qcow2"
    myvscs:
      - { hostname: jenkinsvsc1.example.com,
          target_server: 135.227.181.232,
          mgmt_ip: 192.168.122.212,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask_prefix: 24,
          ctrl_ip: 192.168.100.202,
          ctrl_netmask_prefix: 24,
          vsd_fqdn: jenkinsvsd1.example.com,
          system_ip: 1.1.1.2,
          xmpp_username: jenkinsvsc1,
          vsc_static_route_list: { 0.0.0.0/1 } }
      - { hostname: jenkinsvsc2.example.com,
          target_server: 135.227.181.232,
          mgmt_ip: 192.168.122.213,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask_prefix: 24,
          ctrl_ip: 192.168.100.203,
          ctrl_netmask_prefix: 24,
          vsd_fqdn: jenkinsvsd1.example.com,
          system_ip: 1.1.1.3,
          xmpp_username: jenkinsvsc2,
          vsc_static_route_list: { 0.0.0.0/1 } }
    vrs_package_path: "/tmp/metro/R4"
    vrs_package_file_name_list: { "nuage-python-openvswitch_4.0.3-25_all.deb", "nuage-openvswitch-common_4.0.3-25_all.deb", "nuage-openvswitch-switch_4.0.3-25_amd64.deb"}
    dockermon_install: True
    dockermon_package_file_name: "nuage-docker-monitor_4.0.3-25_all.deb" 
    myvrss:
      - { node_ip_addr: 192.168.122.19,
          active_controller_ip: 192.168.122.212,
          standby_controller_ip: 192.168.122.213 }
    vstat_qcow2_path: "/tmp/metro/R4"
    vstat_qcow2_file_name: "hd_template.qcow2"
    myvstats:
      - { hostname: jenkinsvstat1.example.com,
          target_server: 135.227.181.232,
          mgmt_ip: 192.168.122.214,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0,
          vsd_fqdn: jenkinsvsd1.example.com }
    ansible_host: 135.227.181.232
    vns: False
    vnsutil_qcow2_path: "/tmp/metro/R4"
    vnsutil_qcow2_file_name: "vns-util-0.0_98.qcow2"
    myvnsutils:
      - { hostname: jenkinsvnsutil1.example.com,
          target_server: 135.227.181.232,
          mgmt_ip: 192.168.122.215,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0,
          data_ip: 192.168.100.215,
          data_subnet: 192.168.100.0,
          data_netmask: 255.255.255.0,
          nsgv_ip: 192.168.100.216,
          nsgv_mac: '52:54:00:88:85:12',
          nsgv_hostname: jenkinsnsgv1.example.com,
          vsd_fqdn: vsd.example.com}
    nsgv_qcow2_path: "/tmp/metro/R4"
    nsgv_qcow2_file_name: "ncpe_centos7.qcow2"
    mynsgvs:
      - { hostname: nsgv,
          target_server: 135.227.181.232,
          nsgv_mac: '52:54:00:88:85:12'}
    mgmt_bridge: "virbr0"
    data_bridge: "virbr1"
    access_bridge: "access"
    images_path: "/var/lib/libvirt/images/"
    ntp_server_list:
      - 135.227.181.232
      - 127.0.0.1
    dns_server_list:
      - 192.168.122.1
      - 128.251.10.145
    dns_domain: example.com
