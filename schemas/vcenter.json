{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:vcenter",
    "title": "VCenter",
    "description": "Nuage MetroAG vcenter settings",
    "type": "object",
    "widget": "form",
    "properties": {
        "vcenter_username": {
            "type": "string",
            "title": "Username",
            "description": "VCenter username",
            "propertyOrder": 10
        },
        "vcenter_password": {
            "type": "string",
            "title": "Password",
            "description": "VCenter password",
            "propertyOrder": 20
        },
        "vcenter_datacenter": {
            "type": "string",
            "title": "Datacenter",
            "description": "VCenter datacenter",
            "propertyOrder": 30
        },
        "vcenter_cluster": {
            "type": "string",
            "title": "Cluster",
            "description": "VCenter cluster",
            "propertyOrder": 40
        },
        "vcenter_datastore": {
            "type": "string",
            "title": "Datastore",
            "description": "VCenter datastore",
            "propertyOrder": 50
        },
        "vcenter_ovftool": {
            "type": "string",
            "title": "OVF tool",
            "default": "/usr/bin/ovftool",
            "description": "VCenter OVFtool location",
            "propertyOrder": 60
        }
    },
    "required": ["vcenter_username", "vcenter_password", "vcenter_datacenter", "vcenter_cluster", "vcenter_datastore"]
}
