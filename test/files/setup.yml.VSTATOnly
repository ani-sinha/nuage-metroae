---
- hosts: localhost
  tasks:
  - name: Copy test build_vars file for the ansible_os_family of host
    local_action: copy src={{ playbook_dir }}/test/files/build_vars.yml.VSTATOnly.{{ ansible_os_family }} dest={{ playbook_dir }}/roles/reset-build/files/build_vars.yml

  - name: Copy test.yml file to the playbook root
    local_action: copy src={{ playbook_dir }}/test/files/test_install.yml dest={{ playbook_dir }}/test_install.yml
