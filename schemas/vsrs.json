{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vsrs",
    "title": " Virtualized Service Router",
    "description": "Specify configuration for Nuage VSRs",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VSR",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "description": "VSR Hostname",
                "propertyOrder": 10
            },
            "vname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Name of the Virtual Machineon  the Hypervisor",
                "propertyOrder": 20

            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server Type",
                "description": "Type of hypervisor environment into which the instance will be created",
                "enum": ["kvm"],
                "propertyOrder": 30
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server IP or FQDN",
                "description": "Hostname or IP address of the hypervisor where VM  will be instantiated. In the case of deployment in a vCenter environment, this will be the FQDN of the vCenter Server",
                "propertyOrder": 40
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP Address",
                "description": "Management IP for VSR",
                "propertyOrder": 50
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management Network Gateway",
                "description": "Management network gateway for VSR",
                "propertyOrder": 60
            },
            "mgmt_netmask_prefix": {
                "type": "integer",
                "title": "Management Network Mask Prefix Length",
                "description": "Management network mask prefix length for VSR",
                "minimum": 0,
                "maximum": 32,
                "propertyOrder": 70
            },
            "mgmt_static_route_list": {
                "type": "array",
                "title": "Management Static Route List",
                "items": {
                    "type": "string"
                },
                "propertyOrder": 80
            },
            "mgmt_to_hv_bridge": {
                "type":"string",
                "title": "Management to Hypervisor Bridge",
                "propertyOrder": 90
            },
            "ports_to_hv_bridges": {
                "type": "array",
                "title": "Port to Hypervisor Bridges",
                "items": {
                    "type": "string"
                },
                "propertyOrder": 100
            },
            "license_file": {
                "type": "string",
                "title": "License File",
                "propertyOrder": 110
            },
            "deploy_cfg_file": {
                "type": "string",
                "title": "Deploy Configuration File",
                "propertyOrder": 120
            },
            "system_ip": {
                "type": "string",
                "title": "System IP",
                "propertyOrder": 130
            },
            "data_ip": {
                "type": "string",
                "title": "Data IP",
                "propertyOrder": 140
            },
            "config_file_directory": {
                "type": "string",
                "title": "Config File Directory",
                "propertyOrder": 150
            }
        }
    }
}