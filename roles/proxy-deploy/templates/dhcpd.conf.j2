#
# DHCP Server Configuration file.
#   see /usr/share/doc/dhcp*/dhcpd.conf.example
#   see dhcpd.conf(5) man page
#
deny bootp;
default-lease-time 172800;
max-lease-time 345600;
authoritative;
option domain-name-servers {{data_ip}};

shared-network "example.com" {
  option domain-name "example.com";
  subnet {{data_subnet}} netmask {{data_netmask}} {
    authoritative;
    option routers {{data_ip}};
    host nsgv {hardware ethernet {{nsgv_mac}}; fixed-address {{nsgv_ip}}; option host-name nsgv; option domain-name "example.com";}
  }
}
