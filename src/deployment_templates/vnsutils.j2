###############################################################################
# Virtualized Network Service utilities
#
# Specify configuration for Nuage MetroAE VNSutils.
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if vnsutils is defined and vnsutils %}
{% for item in vnsutils %}
#
# VNSUtil {{ loop.index }}
#
-
    # < Hostname >
    #
    hostname: "{{ item.hostname }}"

    # < VM name >
    # Used to identify VM on the hypervisor/vcenter.
    #
    {%- if item.vmname is defined %}
    vmname: "{{ item.vmname }}"
    {%- else %}
    # vmname: (Hostname)
    {%- endif %}

    # < Target Server type >
    # (kvm, vcenter, heat) 
    #
    target_server_type: "{{ item.target_server_type }}"

    # < Target Server hostname >
    #
    target_server: "{{ item.target_server }}"

    # < Management Bridge interface >
    #
    {%- if item.mgmt_bridge is defined %}
    mgmt_bridge: "{{ item.mgmt_bridge }}"
    {%- else %}
    # mgmt_bridge: (global Bridge interface)
    {%- endif %}

    # < Management IP address >
    #
    mgmt_ip: "{{ item.mgmt_ip }}"

    # < Management IP prefix length >
    #
    mgmt_ip_prefix: {{ item.mgmt_ip_prefix }}

    # < Management IP gateway >
    #
    mgmt_gateway: "{{ item.mgmt_gateway }}"

    # < VNSUTIL Data FQDN >
    #
    {%- if item.data_fqdn is defined %}
    data_fqdn: "{{ item.data_fqdn }}"
    {%- else %}
    # data_fqdn: vnsutil1.data.(DNS Domain)
    {%- endif %}

    # < VNSUTIL Data IP address >
    #
    data_ip: "{{ item.data_ip }}"

    # < Data Netmask >
    #
    data_netmask: "{{ item.data_netmask }}"

    # < Data Subnet >
    # Only required for DHCP bootstrap support
    #
    data_subnet: "{{ item.data_subnet }}"

    # < NSGV IP Address >
    #
    nsgv_ip: "{{ item.nsgv_ip }}"

    # < NSGV MAC Address >
    #
    nsgv_mac: "{{ item.nsgv_mac }}"

    # < NSGV Hostname >
    #
    {%- if item.nsgv_hostname is defined %}
    nsgv_hostname: "{{ item.nsgv_hostname }}"
    {%- else %}
    # nsgv_hostname: nsgv1.(DNS Domain)
    {%- endif %}

    # < VSD FQDN >
    #
    {%- if item.vsd_fqdn is defined %}
    vsd_fqdn: "{{ item.vsd_fqdn }}"
    {%- else %}
    # vsd_fqdn: vsd1.(DNS Domain)
    {%- endif %}

    # < VCenter Username >
    # Only applicable for vcenter server type and defaults to global settings
    #
    {%- if item.vcenter_username is defined %}
    vcenter_username: "{{ item.vcenter_username }}"
    {%- else %}
    # vcenter_username: (global VCenter username)
    {%- endif %}

    # < VCenter Password >
    # Only applicable for vcenter server type and defaults to global settings
    #
    {%- if item.vcenter_password is defined %}
    vcenter_password: "{{ item.vcenter_password }}"
    {%- else %}
    # vcenter_password: (global VCenter password)
    {%- endif %}

    # < VCenter Datacenter >
    # Only applicable for vcenter server type and defaults to global settings
    #
    {%- if item.vcenter_datacenter is defined %}
    vcenter_datacenter: "{{ item.vcenter_datacenter }}"
    {%- else %}
    # vcenter_datacenter: (global VCenter datacenter)
    {%- endif %}

    # < VCenter Cluster >
    # Only applicable for vcenter server type and defaults to global settings
    #
    {%- if item.vcenter_cluster is defined %}
    vcenter_cluster: "{{ item.vcenter_cluster }}"
    {%- else %}
    # vcenter_cluster: (global VCenter cluster)
    {%- endif %}

    # < VCenter Datastore >
    # Only applicable for vcenter server type and defaults to global settings
    #
    {%- if item.vcenter_datastore is defined %}
    vcenter_datastore: "{{ item.vcenter_datastore }}"
    {%- else %}
    # vcenter_datastore: (global VCenter datastore)
    {%- endif %}

{% endfor %}
{% else %}
[ ]
{% endif %}
