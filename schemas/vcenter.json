{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vcenter",
    "title": "VCenter",
    "description": "Nuage MetroAE vcenter settings",
    "type": "object",
    "widget": "form",
    "properties": {
        "vcenter_datacenter": {
            "type": "string",
            "title": "Global Datacenter",
            "description": "VCenter datacenter",
            "propertyOrder": 10
        },
        "vcenter_cluster": {
            "type": "string",
            "title": "Global Cluster",
            "description": "VCenter cluster",
            "propertyOrder": 20
        },
        "vcenter_datastore": {
            "type": "string",
            "title": "Global Datastore",
            "description": "VCenter datastore",
            "propertyOrder": 30
        },
        "vcenter_resource_pool": {
            "type": "string",
            "title": "Resource Pool",
            "description": "The vCenter resource pool where the VMs need to be located. A resource pool is a logical abstraction of resources. Different resource pools can be configured to have different priorities in case of resource contention and can have different resource reservations and limitations.",
            "propertyOrder": 40
        },
        "vcenter_ovftool": {
            "type": "string",
            "title": "OVF tool location",
            "default": "/usr/bin/ovftool",
            "description": "VCenter OVFtool location",
            "propertyOrder": 50
        }
    },
    "required": ["vcenter_datacenter", "vcenter_cluster", "vcenter_datastore"]
}
