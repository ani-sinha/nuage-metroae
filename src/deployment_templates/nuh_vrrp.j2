###############################################################################
# NUH VRRP Configuration Settings
#
# NUH VRRP configuration settings for this deployment
#
# Automatically generated by {{ generator_script | default("script") }}.
#

{% if vrrps is defined and vrrps %}
{% for item in vrrps %}
#
# VRRP {{ loop.index }}
#
-
    ##### NUH VRRP

    # < Router ID >
    # Router ID
    #
    router_id: {{ item.router_id }}

    # < Enable VRRP configuration >
    # Enable this VRRP configuration
    #
    {%- if item.enabled is defined %}
    enabled: {{ item.enabled | lower }}
    {%- else %}
    # enabled: True
    {%- endif %}

    # < VRRP interface >
    # VRRP interface
    #
    interface: "{{ item.interface }}"

    # < VIP list >
    # List of VIP addresses
    #
    vip: [ {% for i in item.vip | default([]) %}"{{ i }}", {% endfor %}]

    ##############

{% endfor %}
{% else %}
[ ]
{% endif %}
