{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:common",
    "title": "Common items",
    "description": "Nuage MetroAE common settings",
    "type": "object",
    "widget": "form",
    "properties": {
        "nuage_unzipped_files_dir": {
            "type": "string",
            "title": "Unzipped file directory",
            "description": "Paths to find unzipped image files (e.g. qcow2)",
            "propertyOrder": 10
        },
        "user_ssh_pub_key": {
            "type": "string",
            "title": "SSH public key",
            "default": "~/.ssh/id_rsa.pub",
            "description": "Path to a public key file to be injected in to VSD, VNS Util, VCIN and VSTAT vms during deployment and corresponding private file to be used to connect to the components during deployment",
            "propertyOrder": 20
        },
        "metro_reports_dir": {
            "type": "string",
            "title": "Reports directory",
            "default": "./reports",
            "description": "Location for health reports",
            "propertyOrder": 30
        },
        "dns_domain": {
            "type": "string",
            "format": "hostname",
            "title": "DNS domain",
            "propertyOrder": 40
        },
        "vsd_fqdn_global": {
            "type": "string",
            "title": "Global VSD FQDN",
            "format": "hostname",
            "default": "vsd1.(DNS domain)",
            "description": "Use xmpp FQDN for clustered VSDs and the VSD FQDN for stand-alone.",
            "propertyOrder": 50
        },
        "mgmt_bridge": {
            "type": "string",
            "title": "Management network bridge",
            "description": "Hypervisor network bridges.",
            "propertyOrder": 60
        },
        "data_bridge": {
            "type": "string",
            "title": "Data network bridge",
            "description": "Hypervisor network bridges.",
            "propertyOrder": 70
        },
        "access_bridge": {
            "type": "string",
            "title": "Access network bridge",
            "description": "Hypervisor network bridges.",
            "propertyOrder": 80
        },
        "images_path": {
            "type": "string",
            "title": "Images directory",
            "default": "/var/lib/libvirt/images/",
            "description": "Location to create VM images on KVM target servers.",
            "propertyOrder": 90
        },
        "ntp_server_list": {
            "type": "array",
            "title": "NTP servers",
            "description": "Must be in dotted-decimal format",
            "propertyOrder": 100,
            "items": {
                "type": "string",
                "format": "ipv4"
            }
        },
        "dns_server_list": {
            "type": "array",
            "title": "DNS servers",
            "propertyOrder": 110,
            "items": {
                "type": "string",
                "format": "hostname"
            }
        },
        "timezone": {
            "type": "string",
            "title": "Timezone",
            "default": "US/Pacific",
            "propertyOrder": 120
        },
        "yum_proxy": {
            "type": "string",
            "title": "Proxy for yum",
            "format": "hostname",
            "default": "NONE",
            "propertyOrder": 130
        },
        "yum_update": {
            "type": "boolean",
            "title": "Yum update",
            "default": true,
            "propertyOrder": 140
        },
        "vsd_fallocate_size_gb": {
            "type": "integer",
            "title": "VSD disk space allocation",
            "description": "Amount of VSD disk space to fallocate, in GB",
            "default": 285,
            "propertyOrder": 150,
            "advanced": true
        },
         "vsd_ram": {
            "type": "integer",
            "title": "VSD RAM",
            "description": "Amount of VSD RAM",
            "default": 25165824,
            "propertyOrder": 160,
            "advanced": true
        },
        "vsc_ram": {
            "type": "integer",
            "title": "VSC RAM",
            "description": "Amount of VSC RAM",
            "default": 4147483,
            "propertyOrder": 170,
            "advanced": true
        },
        "vstat_ram": {
            "type": "integer",
            "title": "VSTAT RAM",
            "description": "Amount of VSTAT RAM",
            "default": 16777216,
            "propertyOrder": 180,
            "advanced": true
        },
        "libnetwork_scope": {
            "type": "string",
            "title": "Libnetwork scope",
            "default": "local",
            "enum": ["local", "global"],
            "description": "local: connectivity between containers is limited to within the local host. global: connectivity between containers may span across hosts in the cluster.",
            "propertyOrder": 190

        },
        "libnetwork_cluster_store_scheme": {
            "type": "string",
            "title": "Libnetwork cluster store URL scheme",
            "default": "consul",
            "description": "Scheme of URL pointing to the key-value store used for the Libnetwork cluster.",
            "propertyOrder": 200

        },
        "libnetwork_cluster_store_host": {
            "type": "string",
            "title": "Libnetwork cluster store URL host",
            "default": "NONE",
            "format": "hostname",
            "description": "Host of URL pointing to the key-value store used for the Libnetwork cluster.",
            "propertyOrder": 210

        },
        "libnetwork_cluster_store_port": {
            "type": "integer",
            "title": "Libnetwork cluster store URL port",
            "default": 8500,
            "description": "Port of URL pointing to the key-value store used for the Libnetwork cluster.",
            "propertyOrder": 220

        }
    },
    "required": ["nuage_unzipped_files_dir", "dns_domain", "mgmt_bridge", "data_bridge", "access_bridge", "ntp_server_list", "dns_server_list"]
}
