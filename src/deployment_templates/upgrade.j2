###############################################################################
# Upgrade
#
# Nuage MetroAG upgrade settings
#
# Automatically generated by {{ generator_script | default("script") }}.
#

# < Upgrade starting version >
# Version VSD is being upgraded from. Required for VSD stats (VSTAT) upgrade.
#
upgrade_from_version: "{{ upgrade_from_version }}"

# < Upgrade desired version >
# Version VSD is being upgraded to. Required for VSD stats (VSTAT) upgrade.
#
upgrade_to_version: "{{ upgrade_to_version }}"

# < Version upgrade type >
# Determines major or minor upgrade (minor == same build number, e.g. 4.0.4 to 4.0.7), (major == different build number, e.g. 3.2R10 to 4.0.7)
# (major, minor) 
#
{%- if upgrade_major_or_minor is defined %}
upgrade_major_or_minor: "{{ upgrade_major_or_minor }}"
{%- else %}
# upgrade_major_or_minor: minor
{%- endif %}

# < Upgrade VSTAT in place? >
#
{%- if vstat_in_place_upgrade is defined %}
vstat_in_place_upgrade: {{ vstat_in_place_upgrade | lower }}
{%- else %}
# vstat_in_place_upgrade: False
{%- endif %}

# < VSTAT NFS server >
# Used to mount NFS folder on VSD stats (VSTAT) node(s).
#
{%- if vstat_nfs_server is defined %}
vstat_nfs_server: "{{ vstat_nfs_server }}"
{%- else %}
# vstat_nfs_server: 0.0.0.0
{%- endif %}

# < VSTAT NFS directory >
# Used to mount NFS directory on VSD stats (VSTAT) node(s).
#
{%- if vstat_nfs_folder is defined %}
vstat_nfs_folder: "{{ vstat_nfs_folder }}"
{%- else %}
# vstat_nfs_folder: /tmp/vstat/
{%- endif %}

# < VSTAT backup scripts directory >
#
{%- if vstat_backup_scripts_path is defined %}
vstat_backup_scripts_path: "{{ vstat_backup_scripts_path }}"
{%- else %}
# vstat_backup_scripts_path: 
{%- endif %}

# < VSTAT backup scripts file list >
#
{%- if vstat_backup_scripts_file_list is defined %}
vstat_backup_scripts_file_list: "{{ vstat_backup_scripts_file_list }}"
{%- else %}
# vstat_backup_scripts_file_list: 
{%- endif %}

# < VSTAT upgrade scripts directory >
#
{%- if vstat_upgrade_scripts_path is defined %}
vstat_upgrade_scripts_path: "{{ vstat_upgrade_scripts_path }}"
{%- else %}
# vstat_upgrade_scripts_path: 
{%- endif %}

# < VSTAT upgrade scripts file >
#
{%- if vstat_upgrade_scripts_file is defined %}
vstat_upgrade_scripts_file: "{{ vstat_upgrade_scripts_file }}"
{%- else %}
# vstat_upgrade_scripts_file: 
{%- endif %}

