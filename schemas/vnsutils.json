{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vnsutils",
    "title": "Virtualized Network Service utilities",
    "description": "Specify configuration for Nuage MetroAE VNSutils.",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VNSUtil",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 60
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "minimum": 0,
                "maximum": 32,
                "propertyOrder": 70
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 80
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server type",
                "propertyOrder": 30,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server hostname",
                "propertyOrder": 40
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Management Bridge interface",
                "propertyOrder": 50
            },
            "data_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vnsutil1.data.(DNS Domain)",
                "title": "VNSUTIL Data FQDN",
                "target_server_type": "kvm",
                "propertyOrder": 90
            },
            "data_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "VNSUTIL Data IP address",
                "default": "",
                "target_server_type": "kvm",
                "propertyOrder": 100
            },
            "data_netmask": {
                "type": "string",
                "title": "Data Netmask",
                "default": "",
                "target_server_type": "kvm",
                "propertyOrder": 110
            },
            "data_subnet": {
                "type": "string",
                "title": "Data Subnet",
                "description": "Only required for DHCP bootstrap support",
                "default": "",
                "target_server_type": "kvm",
                "propertyOrder": 120
            },
            "nsgv_ip": {
                "type": "string",
                "title": "NSGV IP Address",
                "format": "ipv4",
                "default": "",
                "advanced": true,
                "propertyOrder": 130
            },
            "nsgv_mac": {
                "type": "string",
                "title": "NSGV MAC Address",
                "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
                "default": "",
                "advanced": true,
                "propertyOrder": 140
            },
            "nsgv_hostname": {
                "type": "string",
                "format": "hostname",
                "default": "nsgv1.(DNS Domain)",
                "title": "NSGV Hostname",
                "default": "",
                "advanced": true,
                "propertyOrder": 150
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "VCenter Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 190
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "VCenter Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 200
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "VCenter Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 210
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
