{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:vsds",
    "title": "Virtual Services Directory",
    "description": "Specify configuration for Nuage MetroAG VSDs.  There must be either 0, 1 (for stand-alone) or 3 (for high-availability) VSDs specified",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VSD",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "upgrade_vmname": {
                "type": "string",
                "format": "hostname",
                "title": "Upgrade VM name",
                "propertyOrder": 30
            },
            "target_server_type": {
                "type": "string",
                "title": "Server type",
                "propertyOrder": 40,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Bridge interface",
                "propertyOrder": 60
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "vcenter_username": {
                "type": "string",
                "title": "VCenter Username",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter username)",
                "propertyOrder": 100
            },
            "vcenter_password": {
                "type": "string",
                "title": "Password",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter password)",
                "propertyOrder": 110
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "propertyOrder": 120
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "propertyOrder": 130
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "propertyOrder": 140
            }
        },
        "required": ["hostname", "upgrade_vmname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
