{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:dnss",
    "title": "Domain Name System",
    "description": "Specify configuration for Nuage DNSs.",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "DNS",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "description": "DNS Hostname",
                "propertyOrder": 10
            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server Type",
                "description": "Type of hypervisor environment into which the instance will be created",
                "propertyOrder": 20,
                "enum": ["kvm"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server IP or FQDN",
                "description": "Hostname or IP address of the hypervisor where VM  will be instantiated. In the case of deployment in a vCenter environment, this will be the FQDN of the vCenter Server",
                "propertyOrder": 30
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP Address",
                "propertyOrder": 40
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management Network Gateway",
                "description": "Management network gateway for DNS",
                "propertyOrder": 50
            },
            "mgmt_netmask": {
                "type": "string",
                "title": "Management Network Prefix Length",
                "description": "Management network prefix length for DNS",
                "propertyOrder": 60
            },
            "data_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Data IP",
                "propertyOrder": 70
            },
            "data_subnet": {
                "type": "string",
                "format": "ipv4",
                "title": "Data Subnet",
                "propertyOrder": 80
            },
            "data_netmask": {
                "type": "string",
                "format": "ipv4",
                "title": "Data Netmask",
                "propertyOrder": 90
            },
            "data_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Data Gateway",
                "propertyOrder": 100
            },
            "data_static_route": {
                "type": "array",
                "title": "Data Static Route",
                "items": {
                    "type": "string",
                },
                "propertyOrder": 110
            },
            "dns_server": {
                "type": "string",
                "format": "ipv4",
                "title": "DNS Server",
                "propertyOrder": 120
            },
            "dns_mgmt": {
                "type": "string",
                "format": "hostname",
                "title": "DNS Management",
                "propertyOrder": 130
            },
            "dns_data": {
                "type": "string",
                "format": "hostname",
                "title": "DNS Data",
                "propertyOrder": 140
            },
            "dns_mgmt_lookup": {
                "type": "array",
                "title": "DNS Management Lookup",
                "items": {
                    "type": "string",
                    "pattern": "[a-zA-Z0-9_.-]+\\s*:\\s*([0-9]+\\.){3}[0-9]+"
                },
                "propertyOrder": 150
            },
            "dns_data_lookup": {
                "type": "array",
                "title": "DNS Data Lookup",
                "items": {
                    "type": "string",
                    "pattern": "[a-zA-Z0-9_.-]+\\s*:\\s*([0-9]+\\.){3}[0-9]+"
                },
                "propertyOrder": 160
            }
        }
    }
}
