---
- hosts: localhost
  tasks:
  - name: Generate random hostname
    set_fact:
      host_name: "jen-slave-{{ 1000 | random }}"

  - name: Copy test build_vars file for RedHat OS family
    local_action: template src={{ playbook_dir }}/test/files/build_vars.yml.CI.j2 dest={{ playbook_dir }}/roles/reset-build/files/build_vars.yml

