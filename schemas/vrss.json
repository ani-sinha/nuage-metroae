{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:vrss",
    "title": "VRSs",
    "description": "Specify configuration for Nuage MetroAG VRSs",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "vrs_os_type": {
                "type": "string",
                "title": "VRS OS type",
                "propertyOrder": 10
            },
            "libnetwork_install": {
                "type": "boolean",
                "title": "libnetwork install",
                "propertyOrder": 20
            },
            "dkms_install": {
                "type":"boolean",
                "title": "dkms install",
                "propertyOrder": 30
            },
            "active_controller_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 40
            },
            "standby_controller_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 50
            },
            "vrs_ip_list": {
                "type": "array",
                "title": "VRS route IP list",
                "propertyOrder": 60,
                "items": {
                    "type": "string",
                    "format": "ipv4"
                }
            }
        },
        "required": ["vrs_set_name", "active_controller_ip", "standby_controller_ip", "vrs_os_type","vrs_ip_list"]
    }
}
