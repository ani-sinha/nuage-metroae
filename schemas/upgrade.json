{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:upgrade",
    "title": "Upgrade",
    "description": "Nuage MetroAG upgrade settings",
    "type": "object",
    "definitions": {
        "version": {
            "type": "string",
            "pattern": "[0-9]+[.][0-9]+[.][0-9a-zA-Z]+"
        }
    },
    "properties": {
        "upgrade_from_version": {
            "$ref": "#/definitions/version",
            "title": "Upgrade starting version",
            "description": "Version VSD is being upgraded from. Required for VSD stats (VSTAT) upgrade.",
            "propertyOrder": 10
        },
        "upgrade_to_version": {
            "$ref": "#/definitions/version",
            "title": "Upgrade desired version",
            "description": "Version VSD is being upgraded to. Required for VSD stats (VSTAT) upgrade.",
            "propertyOrder": 20
        },
        "upgrade_major_or_minor": {
            "type": "string",
            "default": "minor",
            "enum": ["major", "minor"],
            "title": "Version upgrade type",
            "description": "Determines major or minor upgrade (minor == same build number, e.g. 4.0.4 to 4.0.7), (major == different build number, e.g. 3.2R10 to 4.0.7)",
            "propertyOrder": 30
        },
        "vstat_in_place_upgrade": {
            "type": "boolean",
            "default": false,
            "title": "Upgrade VSTAT in place?",
            "propertyOrder": 40
        },
        "vstat_nfs_server": {
            "type": "string",
            "default": "0.0.0.0",
            "format": "hostname",
            "title": "VSTAT NFS server",
            "description": "Used to mount NFS folder on VSD stats (VSTAT) node(s).",
            "propertyOrder": 50
        },
        "vstat_nfs_folder": {
            "type": "string",
            "default": "/tmp/vstat/",
            "title": "VSTAT NFS directory",
            "description": "Used to mount NFS directory on VSD stats (VSTAT) node(s).",
            "propertyOrder": 60
        },
        "vstat_backup_scripts_path": {
            "type": "string",
            "default": "",
            "title": "VSTAT backup scripts directory",
            "propertyOrder": 70
        },
        "vstat_backup_scripts_file_list": {
            "type": "string",
            "default": "",
            "title": "VSTAT backup scripts file list",
            "propertyOrder": 80
        },
        "vstat_upgrade_scripts_path": {
            "type": "string",
            "default": "",
            "title": "VSTAT upgrade scripts directory",
            "propertyOrder": 90
        },
        "vstat_upgrade_scripts_file": {
            "type": "string",
            "default": "",
            "title": "VSTAT upgrade scripts file",
            "propertyOrder": 100
        }
    },
    "required": ["upgrade_from_version"]
}
