{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:credentials",
    "title": "Credentials",
    "description": "Nuage MetroAE credentials",
    "type": "object",
    "widget": "form",
    "properties": {
        "target_server_username": {
            "type": "string",
            "title": "Target server username",
            "default": "root",
            "description": "Remote user name for ansible to execute as on the target server (hypervisor).",
            "target_server_type": "kvm",
            "propertyOrder": 10
        },
        "vcenter_username": {
            "type": "string",
            "title": "Username",
            "description": "VCenter username",
            "target_server_type": "vcenter",
            "propertyOrder": 20
        },
        "vcenter_password": {
            "type": "string",
            "title": "Password",
            "description": "VCenter password",
            "target_server_type": "vcenter",
            "propertyOrder": 30
        },
        "vsd_auth_username": {
            "type": "string",
            "title": "VSD API/Architect username",
            "default": "csproot",
            "workflow": "Upgrade",
            "propertyOrder": 40
        },
        "vsd_auth_password": {
            "type": "string",
            "title": "VSD API/Architect password",
            "default": "csproot",
            "workflow": "Upgrade",
            "propertyOrder": 50
        },
        "vsd_custom_username": {
            "type": "string",
            "title": "VSD system username",
            "default": "root",
            "workflow": "Upgrade",
            "component_type": "vsd",
            "propertyOrder": 80
        },
        "vsd_custom_password": {
            "type": "string",
            "title": "VSD system password",
            "default": "Alcateldc",
            "workflow": "Upgrade",
            "component_type": "vsd",
            "propertyOrder": 90
        },
        "vcin_username": {
            "type": "string",
            "title": "VCIN system username",
            "default": "root",
            "workflow": "Upgrade",
            "component_type": "vcin",
            "propertyOrder": 100
        },
        "vcin_password": {
            "type": "string",
            "title": "VCIN system password",
            "default": "Alcateldc",
            "workflow": "Upgrade",
            "component_type": "vcin",
            "propertyOrder": 110
        },
        "vsc_username": {
            "type": "string",
            "title": "VSC system username",
            "default": "admin",
            "workflow": "Upgrade",
            "component_type": "vsc",
            "propertyOrder": 120
        },
        "vsc_password": {
            "type": "string",
            "title": "VSC system password",
            "default": "admin",
            "workflow": "Upgrade",
            "component_type": "vsc",
            "propertyOrder": 130
        },
        "vstat_username": {
            "type": "string",
            "title": "VSD Stats (VSTAT) system username",
            "default": "root",
            "workflow": "Upgrade",
            "component_type": "vstat",
            "propertyOrder": 140
        },
        "vstat_password": {
            "type": "string",
            "description": "VSD Stats (VSTAT) system password",
            "default": "Alcateldc",
            "workflow": "Upgrade",
            "component_type": "vstat",
            "propertyOrder": 150
        }
    }
}
