---
# See BUILD.md for details

# First set of tasks is to gather_facts so that subsequent task list can use these facts as part of variable setting
- hosts: localhost
  gather_facts: yes
  tasks: []

# Actual tasks to generate build configuration
- hosts: localhost
  roles:
    - nuage-unpack
    - build
  vars:
    nuage_release_src_path: "/home/caso/metro/R4/nuage-packed"
    nuage_unpacked_dest_path: "/home/caso/metro/R4/nuage-unpacked"
    nuage_target_architecture: "el7"
    nuage_unpacked: false

    vsd_standalone: True
    myvsds:
      - { hostname: myjenkinsvsd1.example.com,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          mgmt_ip: 192.168.122.221,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0 }
    myvscs:
      - { hostname: myjenkinsvsc1.example.com,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          mgmt_ip: 192.168.122.222,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask_prefix: 24,
          ctrl_ip: 192.168.100.202,
          ctrl_netmask_prefix: 24,
          vsd_fqdn: myjenkinsvsd1.example.com,
          system_ip: 1.1.1.2,
          xmpp_username: myjenkinsvsc1,
          vsc_static_route_list: { 0.0.0.0/1 } }
      - { hostname: myjenkinsvsc2.example.com,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          mgmt_ip: 192.168.122.223,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask_prefix: 24,
          ctrl_ip: 192.168.100.203,
          ctrl_netmask_prefix: 24,
          vsd_fqdn: myjenkinsvsd1.example.com,
          system_ip: 1.1.1.3,
          xmpp_username: myjenkinsvsc2,
          vsc_static_route_list: { 0.0.0.0/1 } }
    dockermon_install: True
    myvrss:
      - { node_ip_addr: 192.168.122.244,
          active_controller_ip: 192.168.122.222,
          standby_controller_ip: 192.168.122.223 }
    myvstats:
      - { hostname: myjenkinsvstat1.example.com,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          mgmt_ip: 192.168.122.224,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0,
          vsd_fqdn: myjenkinsvsd1.example.com }
    myvnsutils:
      - { hostname: myjenkinsvnsutil1.example.com,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          mgmt_ip: 192.168.122.225,
          mgmt_gateway: 192.168.122.1,
          mgmt_netmask: 255.255.255.0,
          data_ip: 192.168.100.225,
          data_subnet: 192.168.100.0,
          data_netmask: 255.255.255.0,
          nsgv_ip: 192.168.100.226,
          nsgv_mac: '52:54:00:88:85:12',
          nsgv_hostname: myjenkinsnsgv1.example.com,
          vsd_fqdn: myjenkinsvsd1.example.com }
    mynsgvs:
      - { hostname: mynsgv,
          target_server_type: "kvm",
          target_server: 135.227.181.233,
          nsgv_mac: '52:54:00:88:85:12' }
    ansible_deployment_host: 135.227.181.233
    mgmt_bridge: "virbr0"
    data_bridge: "virbr1"
    access_bridge: "access"
    images_path: "/var/lib/libvirt/images/"
    ntp_server_list:
      - 135.227.181.232
      - 192.96.202.120
    dns_server_list:
      - 192.168.122.1
      - 128.251.10.145
    dns_domain: example.com
