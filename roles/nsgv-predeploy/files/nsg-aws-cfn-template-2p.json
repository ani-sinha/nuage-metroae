{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "AWS CloudFormation Template to deploy a 2-port Nuage Networks NSG AMI Image. **WARNING** This template creates an Amazon EC2 instance and ElasticIP. You will be billed for these AWS resources used if you create a stack from this template.",
  "Parameters": {
    "KeyName": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "AWS::EC2::KeyPair::KeyName",
      "ConstraintDescription": "must be the name of an existing EC2 KeyPair."
    },
    "SubnetNSGLAN": {
      "Description": "Subnet ID",
      "Type": "AWS::EC2::Subnet::Id",
      "ConstraintDescription": "Must be from existing subnet"
    },
    "SubnetNSGWAN": {
      "Description": "Subnet ID for Port1 interface",
      "Type": "AWS::EC2::Subnet::Id",
      "ConstraintDescription": "Must be from existing subnet"
    },
    "SecGroupLAN": {
      "Description": "Security Group IDs",
      "Type": "List<AWS::EC2::SecurityGroup::Id>",
      "ConstraintDescription": "Security Groups already created"
    },
    "SecGroupWAN": {
      "Description": "Security Group ID for port1",
      "Type": "List<AWS::EC2::SecurityGroup::Id>",
      "ConstraintDescription": "Security Groups already created"
    },
    "AMI": {
      "Description": "Enter AMI-ID for Instance",
      "Type": "AWS::EC2::Image::Id",
      "ConstraintDescription": "Security Groups already created"
    },
    "InstanceType": {
      "Description": "NSG EC2 instance type",
      "Type": "String",
      "Default": "t2.medium",
      "AllowedValues": [
        "t2.small",
        "t2.medium",
        "m4.large",
        "c3.8xlarge",
        "c4.8xlarge",
        "g2.8xlarge",
        "r3.8xlarge",
        "i2.8xlarge",
        "d2.8xlarge",
        "hi1.4xlarge",
        "hs1.8xlarge",
        "cr1.8xlarge",
        "cc2.8xlarge",
        "m2.4xlarge",
        "m4.4xlarge",
        "cg1.4xlarge"
      ],
      "ConstraintDescription": "must be a valid EC2 instance type."
    },
    "InstanceName": {
      "Description": "Enter Name for Instance",
      "ConstraintDescription": "Instance Name",
      "Type": "String"
    }
  },
  "Resources": {
    "NSGAMI": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "Tags": [
          {
            "Key": "Name",
            "Value": {
              "Ref": "InstanceName"
            }
          }
        ],
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "KeyName"
        },
        "ImageId": {
          "Ref": "AMI"
        },
        "NetworkInterfaces": [
          {
            "DeviceIndex": "0"
          },
          {
            "DeviceIndex": "1"
          },
          {
            "NetworkInterfaceId": {
              "Ref": "ENIWAN1"
            }
          },
          {
            "NetworkInterfaceId": {
              "Ref": "ENIVPC1"
            }
          }
        ]
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "5c600c32-ec61-4f7a-9db3-a70a5dbe0d10"
        }
      }
    },
    "EIP": {
      "Type": "AWS::EC2::EIP",
      "Properties": {
        "Domain": "vpc"
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "a0746fb6-6e6d-4e8c-b368-553cd8dc18b0"
        }
      }
    },
    "ENIWAN1": {
      "Type": "AWS::EC2::NetworkInterface",
      "Properties": {
        "SubnetId": {
          "Ref": "SubnetNSGWAN"
        },
        "GroupSet": {
          "Ref": "SecGroupWAN"
        },
        "SourceDestCheck": "false"
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "0639f98b-f62a-4c80-89b2-7e521cdb5c52"
        }
      }
    },
    "ENIVPC1": {
      "Type": "AWS::EC2::NetworkInterface",
      "Properties": {
        "SubnetId": {
          "Ref": "SubnetNSGLAN"
        },
        "GroupSet": {
          "Ref": "SecGroupLAN"
        },
        "SourceDestCheck": "false"
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "2a4fb0fa-120e-4b25-bd35-edf2b24655ec"
        }
      }
    },
    "EC2EIPA47VJO": {
      "Type": "AWS::EC2::EIPAssociation",
      "Properties": {
        "AllocationId": {
          "Ref": "EIP"
        },
        "NetworkInterfaceId": {
          "Ref": "ENIWAN1"
        }
      },
      "Metadata": {
        "AWS::CloudFormation::Designer": {
          "id": "9dd086c0-46e5-4773-a7fe-34229f40ba00"
        }
      }
    }
  },
  "Outputs": {
    "InstanceId": {
      "Description": "InstanceId of the newly created EC2 instance",
      "Value": {
        "Ref": "NSGAMI"
      }
    },
    "AZ": {
      "Description": "Availability Zone of the newly created EC2 instance",
      "Value": {
        "Fn::GetAtt": [
          "NSGAMI",
          "AvailabilityZone"
        ]
      }
    },
    "PublicDNS": {
      "Description": "Public DNSName of the newly created EC2 instance",
      "Value": {
        "Fn::GetAtt": [
          "NSGAMI",
          "PublicDnsName"
        ]
      }
    }
  },
