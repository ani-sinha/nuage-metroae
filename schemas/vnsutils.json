{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroag:vnsutils",
    "title": "VNSUtils",
    "description": "Specify configuration for Nuage MetroAG VNSutils.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "target_server_type": {
                "type": "string",
                "title": "Server type",
                "propertyOrder": 40,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Bridge interface",
                "propertyOrder": 60
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "data_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vnsutil1.data.(DNS Domain)",
                "title": "VSD FQDN",
                "propertyOrder": 100
            },
            "data_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "VNSUtil Data IP address",
                "propertyOrder": 110
            },
            "data_netmask": {
                "type": "string",
                "title": "Data Netmask",
                "propertyOrder": 120
            },
            "data_subnet": {
                "type": "string",
                "title": "Cluster",
                "description": "Only required for DHCP bootstrap support",
                "propertyOrder": 130
            },
            "nsgv_ip": {
                "type": "string",
                "title": "NSGV IP",
                "format": "ipv4",
                "propertyOrder": 130
            },
            "nsgv_mac": {
                "type": "string",
                "title": "NSGV Mac",
                "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
                "propertyOrder": 140
            },
            "nsgv_hostname": {
                "type": "string",
                "format": "hostname",
                "default": "nsgv1.(DNS Domain)",
                "title": "NSGV Hostname",
                "propertyOrder": 150
            },
            "vsd_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vsd1.(DNS Domain)",
                "title": "VSD FQDN",
                "propertyOrder": 160
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
