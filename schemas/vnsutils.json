{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vnsutils",
    "title": "Virtualized Network Service utilities",
    "description": "Specify configuration for Nuage MetroAE VNSutils.",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VNSUtil",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server type",
                "propertyOrder": 40,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Management Bridge interface",
                "propertyOrder": 60
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "data_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vnsutil1.data.(DNS Domain)",
                "title": "VNSUTIL Data FQDN",
                "propertyOrder": 100
            },
            "data_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "VNSUTIL Data IP address",
                "propertyOrder": 110
            },
            "data_netmask": {
                "type": "string",
                "title": "Data Netmask",
                "propertyOrder": 120
            },
            "data_subnet": {
                "type": "string",
                "title": "Data Subnet",
                "description": "Only required for DHCP bootstrap support",
                "propertyOrder": 130
            },
            "nsgv_ip": {
                "type": "string",
                "title": "NSGV IP Address",
                "format": "ipv4",
                "propertyOrder": 130
            },
            "nsgv_mac": {
                "type": "string",
                "title": "NSGV MAC Address",
                "pattern": "^([0-9A-Fa-f]{2}[:-]){5}([0-9A-Fa-f]{2})$",
                "propertyOrder": 140
            },
            "nsgv_hostname": {
                "type": "string",
                "format": "hostname",
                "default": "nsgv1.(DNS Domain)",
                "title": "NSGV Hostname",
                "propertyOrder": 150
            },
            "vsd_fqdn": {
                "type": "string",
                "format": "hostname",
                "default": "vsd1.(DNS Domain)",
                "title": "VSD FQDN",
                "propertyOrder": 160
            },
            "vcenter_username": {
                "type": "string",
                "title": "VCenter Username",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter username)",
                "propertyOrder": 150
            },
            "vcenter_password": {
                "type": "string",
                "title": "VCenter Password",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter password)",
                "propertyOrder": 160
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "VCenter Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "propertyOrder": 170
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "VCenter Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "propertyOrder": 180
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "VCenter Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "propertyOrder": 190
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
