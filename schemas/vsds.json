{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vsds",
    "title": "Virtualized Services Directory",
    "description": "Specify configuration for Nuage MetroAE VSDs.",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VSD",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "minimum": 0,
                "maximum": 32,
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "upgrade_vmname": {
                "type": "string",
                "format": "hostname",
                "title": "Upgrade VM name",
                "workflow": "Upgrade",
                "propertyOrder": 30
            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server type",
                "propertyOrder": 40,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Management Bridge interface",
                "advanced": true,
                "propertyOrder": 60
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "VCenter Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 120
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "VCenter Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 130
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "VCenter Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "target_server_type": "vcenter",
                "advanced": true,
                "propertyOrder": 140
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
