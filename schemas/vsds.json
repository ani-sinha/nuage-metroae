{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:vsds",
    "title": "Virtualized Services Directory",
    "description": "Specify configuration for Nuage MetroAE VSDs.",
    "type": "array",
    "widget": "form",
    "items": {
        "widget": "item",
        "type": "object",
        "title": "VSD",
        "properties": {
            "hostname": {
                "type": "string",
                "format": "hostname",
                "title": "Hostname",
                "propertyOrder": 10
            },
            "vmname": {
                "type": "string",
                "format": "hostname",
                "title": "VM name",
                "default": "(Hostname)",
                "description": "Used to identify VM on the hypervisor/vcenter.",
                "propertyOrder": 20
            },
            "upgrade_vmname": {
                "type": "string",
                "format": "hostname",
                "title": "Upgrade VM name",
                "propertyOrder": 30
            },
            "target_server_type": {
                "type": "string",
                "title": "Target Server type",
                "propertyOrder": 40,
                "enum": ["kvm", "vcenter", "heat"]
            },
            "target_server": {
                "type": "string",
                "format": "hostname",
                "title": "Target Server hostname",
                "propertyOrder": 50
            },
            "mgmt_bridge": {
                "type": "string",
                "default": "(global Bridge interface)",
                "title": "Management Bridge interface",
                "propertyOrder": 60
            },
            "mgmt_ip": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP address",
                "propertyOrder": 70
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management IP prefix length",
                "propertyOrder": 80
            },
            "mgmt_gateway": {
                "type": "string",
                "format": "ipv4",
                "title": "Management IP gateway",
                "propertyOrder": 90
            },
            "vcenter_username": {
                "type": "string",
                "title": "VCenter Username",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter username)",
                "propertyOrder": 100
            },
            "vcenter_password": {
                "type": "string",
                "title": "VCenter Password",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter password)",
                "propertyOrder": 110
            },
            "vcenter_datacenter": {
                "type": "string",
                "title": "VCenter Datacenter",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datacenter)",
                "propertyOrder": 120
            },
            "vcenter_cluster": {
                "type": "string",
                "title": "VCenter Cluster",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter cluster)",
                "propertyOrder": 130
            },
            "vcenter_datastore": {
                "type": "string",
                "title": "VCenter Datastore",
                "description": "Only applicable for vcenter server type and defaults to global settings",
                "default": "(global VCenter datastore)",
                "propertyOrder": 140
            },
            "aws_region": {
                "type": "string",
                "title": "AWS Region",
                "description": "Only applicable for AWS deployments",
                "propertyOrder": 150
            },
            "aws_ami_id": {
                "type": "string",
                "title": "AWS AMI ID",
                "description": "AMI ID for AWS instance",
                "propertyOrder": 160
            },
            "aws_upgrade_ami_id": {
                "type": "string",
                "title": "AWS AMI ID for Upgrading Instance",
                "description": "AMI ID of the upgraded image",
                "propertyOrder": 170
            },
            "aws_instance_type": {
                "type": "string",
                "title": "AWS Instance Type",
                "description": "Instance Type of the AWS Instance",
                "propertyOrder": 180
            },
            "aws_key_name": {
                "type": "string",
                "title": "AWS Keypair Name",
                "description": "Name of the Keypair used to connect to VPC",
                "propertyOrder": 190
            },
            "aws_mgmt_eni": {
                "type": "string",
                "format": "ipv4",
                "title": "AWS Management ENI ID",
                "description": "ENI ID for VSD Instance on Management Subnetwork",
                "propertyOrder": 200
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_ip_prefix", "mgmt_gateway"]
    }
}
