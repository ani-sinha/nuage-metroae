{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "$id": "urn:nuage-metroae:stcvs",
    "title": "VSD",
    "description": "Specify configuration for Nuage STCvs.",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "target_server_type": {
                "type": "string",
                "title": "Target Server Type",
                "description": "Type of hypervisor environment into which the instance will be created",
                "propertyOrder": 10,
                "sectionBegin": "Target Server",
                "enum": ["kvm", "vcenter", "aws", "openstack"]
            },
            "kvm_target_server_os_family_list": {
                "title": "KVM Target Server OS Family List",
                "type": "array",
                "items": {
                    "type": "string",
                    "enum": ["Debian", "RedHat"]
                },
                "propertyOrder": 20
            },
            "target_server": {
                "title": "Target Server",
                "type": "string",
                "format": "ipv4",
                "propertyOrder": 30
            },
            "mgmt_bridge": {
                "title": "Management Bridge",
                "type": "string",
                "propertyOrder": 40
            },
            "data_bridge1": {
                "title": "Data Bridge 1",
                "type": "string",
                "propertyOrder": 50
            },
            "data_bridge2": {
                "title": "Data Bridge 2",
                "type": "string",
                "propertyOrder": 60
            },
            "stcv_destination_image_path": {
                "title": "Image path",
                "type": "string",
                "propertyOrder": 70
            },
            "vcpus": {
                "title": "VM VCPUs",
                "type": "integer",
                "propertyOrder": 80
            },
            "ram": {
                "title": "VM RAM",
                "type": "integer",
                "propertyOrder": 90
            },
            "hostname": {
                "title": "VM Hostname",
                "format": "hostname",
                "type": "string",
                "propertyOrder": 100
            },
            "mgmt_ip": {
                "title": "VM Management IP",
                "type": "string",
                "format": "ipv4",
                "propertyOrder": 110
            },
            "mgmt_gateway": {
                "title": "VM Management Gateway",
                "type": "string",
                "format": "ipv4",
                "propertyOrder": 120
            },
            "mgmt_ip_prefix": {
                "type": "integer",
                "title": "Management Network Prefix Length",
                "description": "Management network prefix length for STCv",
                "minimum": 0,
                "maximum": 32,
                "propertyOrder": 130
            },
            "vcenter_datacenter": {
                "title": "Datacenter",
                "type": "string",
                "format": "hostname",
                "propertyOrder": 140
            },
            "vcenter_cluster": {
                "title": "Cluster",
                "type": "string",
                "format": "hostname",
                "propertyOrder": 150
            },
            "vcenter_datastore": {
                "title": "DataStore",
                "type": "string",
                "format": "hostname",
                "propertyOrder": 160
            },
            "vcenter_ovftool": {
                "title": "ovftool",
                "type": "string",
                "propertyOrder": 170
            }
        },
        "required": ["hostname", "target_server_type", "target_server", "mgmt_ip", "mgmt_gateway", "mgmt_ip_prefix"]
    }
}
