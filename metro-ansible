#!/usr/bin/env bash
set -ex
#
# Wrapper around ansible-playbook for the installation of Nuage components

PLAYBOOK=$1
COMMAND='$(which ansible-playbook) -i hosts'

if [[ -a $PLAYBOOK  ]]; then
  echo "Executing $@"
  $COMMAND $@
elif [[ -a ./playbooks/$PLAYBOOK ]]; then
  echo "Executing ./playbooks/$@"
  $COMMAND ./playbooks/$@
else
  echo "Requested Metro-Playbook could not be found"
  exit 1
fi
